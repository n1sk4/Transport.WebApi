<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.31.0" />
    <PackageReference Include="Serilog" Version="4.3.0" />
    <PackageReference Include="Serilog.AspNetCore" Version="9.0.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="6.0.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Services\Generated\" />
  </ItemGroup>

  <Target Name="GenerateProtobuf"
        BeforeTargets="BeforeBuild"
        Inputs="Vendor/transit/gtfs-realtime/proto/gtfs-realtime.proto"
        Outputs="Services/Generated/GtfsRealtime.cs">
    <Exec
      Command="protoc --csharp_out=Services/Generated Vendor/transit/gtfs-realtime/proto/gtfs-realtime.proto"
      WorkingDirectory="$(ProjectDir)" />
  </Target>

</Project>
